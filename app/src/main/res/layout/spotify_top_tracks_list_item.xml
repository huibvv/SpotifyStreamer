<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/spotify_top_track_album_imageview"
        android:layout_width="@dimen/spotify_image_width"
        android:layout_height="@dimen/spotify_image_height"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/list_item_text_padding"
        android:orientation="vertical">
        <TextView
            android:id="@+id/spotify_top_track_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dummy name"/>
        <TextView
            android:id="@+id/spotify_top_track_album_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dummy name"/>
        </LinearLayout>

</LinearLayout>